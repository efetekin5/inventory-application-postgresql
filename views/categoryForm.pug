extends layout 

block content 
    h1 #{title}
    br
    form(method='POST')
        h5 
            label(for='name') Name:
            input#name.form-control(type='text' name='name' required value=(name === undefined ? '' : name))
        br
        h5 
            label(for='description') Description: 
            input#description.form-control(type='text' name='description' required value=(description === undefined ? '' : description))
        br
        button.btn.btn-primary(type='submit') Submit

    if errors
        h3 Errors:
        ul
            each error in errors 
                li #{error.msg}